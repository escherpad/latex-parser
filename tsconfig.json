{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "strictNullChecks": true,
    "allowJs": false,
    "outDir": "ts-compiled"
  },
  "include": [
    "sources/**/*.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}